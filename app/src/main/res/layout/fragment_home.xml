<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/myProfile"
        android:layout_width="162dp"
        android:layout_height="62dp"
        android:layout_marginStart="303dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="802dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile"
        tools:ignore="VectorDrawableCompat" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="432dp"
        android:layout_height="180dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/expenses"
        android:layout_width="171dp"
        android:layout_height="95dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/rounder_corners"
        android:text="Calculate Expenses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/flat"
        android:layout_width="166dp"
        android:layout_height="78dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/rounder_corners"
        android:text="Find A FlatMate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expenses"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/room"
        android:layout_width="166dp"
        android:layout_height="80dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/rounder_corners"
        android:text="Find A Room"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flat"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="12dp"
        android:text="NEWS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>